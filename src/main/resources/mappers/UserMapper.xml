<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.security.user.dao.UserDAO">

    <!--  UserVO getUserByUsername(String username);  -->

    <select id="getUserByUsername" parameterType="String" resultType="com.example.security.user.vo.UserVO">
        select MEMBER_NO,
               MEMBER_NM,
               MEMBER_NICK,
               MEMBER_PW,
               MEMBER_BIRTH,
               MEMBER_TEL,
               MEMBER_EMAIL,
               MEMBER_ZIP,
               MEMBER_ADDR1,
               MEMBER_ADDR2,
               MEMBER_AUTH,
               MENTOR_EXPERTISE,
               MENTOR_EXPERIENCE,
               MENTOR_CURRENT_JOB,
               ROLE
        from MEMBERS
        where MEMBER_NM = #{username}
    </select>

    <!--   void insertUser(UserVO user);-->

    <insert id="insertUser" parameterType="com.example.security.user.vo.UserVO">
        insert into MEMBERS
        (MEMBER_NM,MEMBER_PW)
        VALUES
        (#{memberNm},#{memberPw})
    </insert>

</mapper>